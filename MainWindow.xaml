<Window x:Class="Weather_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_App"
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None"
        Title="MainWindow" Height="450" Width="300" Background="Transparent" >
    <Border CornerRadius="35" BorderThickness="0" Background="Orange">
        
        <Grid>
        
            <Border x:Name="titlebar" Background="Transparent"  Height="60" VerticalAlignment="Top" CornerRadius="25">
            </Border>
            
        
            <Canvas>
                
                <TextBox x:Name="City" Text="Set your city"
                     
                     Width="200"
                     Height="35"
                     Canvas.Left="20"
                     Canvas.Top="25"
                     Foreground="Gray"
                     Padding="10,0,0,0"
                     FontSize="20"
                     BorderThickness="0">
                    
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20" />
                        </Style>
                    </TextBox.Resources> 
                </TextBox>
                
                <Button x:Name="minimize" Click="Minimize"
                    Height="35"
                    Width="30"
                    Canvas.Top="25"
                    Canvas.Right="40"
                    Background="Transparent"
                    BorderThickness="0">
                    <TextBlock Text="_"></TextBlock>
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="red">
                                        
                                    </Setter>
                                    
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="close" Click="Close"
                    BorderThickness="0"
                    Height="35"
                    Width="30"
                    Canvas.Top="25"
                    Background="Transparent"
                    Canvas.Right="10">
                    <TextBlock Text="X"></TextBlock>
                    <Button.Style>
                        <Style>
                            <Style.Triggers>
                                <Trigger Property="Button.IsMouseOver" Value="True">
                                    <Setter Property="Button.Background" Value="red">
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Canvas>

        </Grid>
    </Border>
</Window>
